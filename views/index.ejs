<%- include('header'); -%>
    <div class="box" id="heading">

        <h1><%= pageTitle %></h1>
    </div>

    <div class="box">
        <% todoItems.forEach((item) =>{ %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" onChange="this.form.submit()" value="<%=item.id%>" name="checkbox">
                    <p><%= item.name %></p>
                </div>
            </form>
        <%})%>
        <form class="item" action="/" method="post">
            <input type="text" name="newTodo" id="newTodo" placeholder="New Item" autocomplete="off">
            <button type="submit" name="button" value=<%= buttonValue%>>+</button>
        </form>
    </div>
<%- include('footer'); -%>