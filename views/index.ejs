<%- include('header'); -%>
    <div class="box" id="heading">

        <h1><%= pageTitle %></h1>
    </div>

    <div class="box">
        <% todoItems.forEach((item) =>{ %>
            <div class="item">
                <input type="checkbox">
                <p><%= item %></p>
            </div>
        <%})%>
        <form class="item" action="/" method="post">
            <input type="text" name="newTodo" id="newTodo" placeholder="New Item" autocomplete="off">
            <button type="submit" name="button" value=<%= buttonValue%>>+</button>
        </form>
    </div>
<%- include('footer'); -%>